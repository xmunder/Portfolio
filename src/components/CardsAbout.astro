---
const { url_icon, alt, title, description } = Astro.props
---

<div class="flex bg-tertiaty rounded-xl p-3 w-auto">
    <img class="h-10 w-10 mr-2" src={url_icon} alt={alt}>
    <div class="flex flex-col w-full">
        <h3 class="text-xl font-medium" id="headerMain">{title}</h1>
        <div class="text-xs font-light text-pretty text-light-gray">{description}</div>
    </div>
</div>