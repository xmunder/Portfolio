---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
---

<Layout title="Cristian Portfolio | Projects">
  <div class="flex-col w-full">
    <h1
      class="title pb-[20px] text-[32px] mb-[20px] mt-5 font-bold w-fit relative"
      id="headerMain">
      Projects
    </h1>
    <Project />
  </div>
</Layout>

<style>
  .title::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30px;
    height: 3px;
    background: hsl(45, 100%, 72%);
    border-radius: 3px;
  }
</style>
